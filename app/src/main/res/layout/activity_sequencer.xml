<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SequencerActivity">

    <Button android:text="C"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/c_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/d_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toBottomOf="@+id/f_key" />
    <Button android:text="D"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/d_key"
        app:layout_constraintStart_toEndOf="@+id/c_key"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/e_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toBottomOf="@+id/f_key" />
    <Button android:text="E"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/e_key"
        app:layout_constraintStart_toEndOf="@+id/d_key"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/f_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toBottomOf="@+id/f_key" />
    <Button android:text="F"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/f_key"
        app:layout_constraintStart_toEndOf="@+id/e_key"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/g_key"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent" />
    <Button android:text="G"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/g_key"
        app:layout_constraintStart_toEndOf="@+id/f_key"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/a_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toBottomOf="@+id/f_key" />
    <Button android:text="A"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/a_key"
        app:layout_constraintStart_toEndOf="@+id/g_key"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/b_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toBottomOf="@+id/f_key" />
    <Button android:text="B"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/b_key"
        app:layout_constraintStart_toEndOf="@+id/a_key"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toBottomOf="@+id/f_key" />
    <Button android:text="C#"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/c_sharp_key"
        app:layout_constraintStart_toStartOf="@id/c_key"
        app:layout_constraintEnd_toEndOf="@id/d_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toTopOf="@+id/half_step_guide"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15" />
    <Button android:text="D#"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/d_sharp_key"
        app:layout_constraintStart_toStartOf="@id/d_key"
        app:layout_constraintEnd_toEndOf="@id/e_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toTopOf="@+id/half_step_guide"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15" />
    <Button android:text="F#"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/f_sharp_key"
        app:layout_constraintStart_toStartOf="@id/f_key"
        app:layout_constraintEnd_toEndOf="@id/g_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toTopOf="@+id/half_step_guide"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15" />
    <Button android:text="G#"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/g_sharp_key"
        app:layout_constraintStart_toStartOf="@id/g_key"
        app:layout_constraintEnd_toEndOf="@id/a_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toTopOf="@+id/half_step_guide"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15" />
    <Button android:text="A#"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/a_sharp_key"
        app:layout_constraintStart_toStartOf="@id/a_key"
        app:layout_constraintEnd_toEndOf="@id/b_key"
        app:layout_constraintTop_toTopOf="@+id/f_key"
        app:layout_constraintBottom_toTopOf="@+id/half_step_guide"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/linearLayout">
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/whole_note_button"
            android:layout_weight="1"
            android:padding="20dp"
            app:srcCompat="@drawable/whole_note"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/half_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/half_note"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"
            android:id="@+id/quarter_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/quarter_note"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/eighth_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/eighth_note"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/sixteenth_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/sixteenth_note"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/whole_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/whole_rest"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/half_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/half_rest"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/quarter_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/quarter_rest"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/eighth_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/eighth_rest"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:id="@+id/sixteenth_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/sixteenth_rest"
            android:scaleType="fitCenter" />

        <Button android:text="Remove"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/remove_button"
            android:layout_weight="1" />
    </LinearLayout>
    <HorizontalScrollView android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/song_view_scroll">
        <ntdalbec.sequencinator.SequencerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/song_view" />
    </HorizontalScrollView>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/play_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />
    <androidx.constraintlayout.widget.Guideline android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/half_step_guide"
        app:layout_constraintGuide_end="77dp" />
    <ProgressBar style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>