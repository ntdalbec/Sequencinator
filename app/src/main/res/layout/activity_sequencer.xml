<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SequencerActivity">

    <HorizontalScrollView android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/key_scroll">
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/key_section" />
    </HorizontalScrollView>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_view_scroll"
        app:layout_constraintBottom_toTopOf="@id/key_scroll"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/sequencer_controls_background"
        android:id="@+id/linearLayout"
        android:showDividers="middle"
        android:divider="?android:listDivider"
        android:dividerPadding="2dp">
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/whole_note_button"
            android:layout_weight="1"
            android:padding="20dp"
            app:srcCompat="@drawable/whole_note"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/half_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/half_note"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"
            android:id="@+id/quarter_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/quarter_note"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/eighth_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/eighth_note"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/sixteenth_note_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/sixteenth_note"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/whole_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/whole_rest"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/half_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/half_rest"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/quarter_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/quarter_rest"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/eighth_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/eighth_rest"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/sixteenth_rest_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/sixteenth_rest"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />

        <Button android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/remove_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1" />
    </LinearLayout>
    <HorizontalScrollView android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/song_view_scroll"
        android:fillViewport="true">
        <ntdalbec.sequencinator.SequencerView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/song_view" />
    </HorizontalScrollView>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/play_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />
    <androidx.constraintlayout.widget.Guideline android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/half_step_guide"
        app:layout_constraintGuide_end="77dp" />
    <ProgressBar style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>